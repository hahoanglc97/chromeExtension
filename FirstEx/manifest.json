{
    "name": "Hahh Extensions",
    "description" : "First Extension",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
	    "scripts": ["background.js"],
	    "persistent": false
  	},
  	"browser_action": {
    	"default_popup": "popup.html"
  	},
  	"content_scripts": [
	    {
	      "matches": ["*://*/*"],
	      "js": ["contentScript.js"]
	    }
  	]
  }