{
    "name": "Tiktok Extensions",
    "description" : "Download video Tiktok on Chrome Extension",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon.png",
            "38": "images/icon.png"
        },
        "default_title": "Download video Tiktok Extension"
    },
    "background": {
        "page": "background.html",
        "persistent": false
    },
  	"content_scripts": [
	    {
            "matches": [
                "*://www.tiktok.com/*"
            ],
    	    "js": [
                "scripts/content.js"
            ],
            "run_at": "document_idle"
	    }
  	],
    "permissions": [
        "clipboardWrite",
        "downloads"
    ]
  }